{{> header}}
<script src="../../../assets/demo/default/custom/crud/metronic-datatable/base/data-json-budgets.js" type="text/javascript"></script>

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button>
                <strong>Oh snap!</strong> {{error}}
            </div>
        {{/if}}
        {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button>
                <strong>Success!</strong> {{success}}
            </div>
        {{/if}}

        <div class="row">
            <div class="col-lg-12">
              <div class="m-portlet m-portlet--mobile">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <h3 class="m-portlet__head-text">
                                Search For Movies
                            </h3>
                        </div>
                    </div>
                </div>
              <div class="m-portlet__body">
                  <h1>
                      <form class="m-form m-form--fit m-form--label-align-right" method="post" action="/dashboard">
                          <div class="form-group m-form__group">
                              <label>Movie Name</label>
                              {{#if movie}}
                                  <input id="SearchBar" type="text" class="form-control m-input m-input--square" name="searchTitle" value="{{movie}}">
                              {{else}}
                                  <input id="SearchBar" type="text" class="form-control m-input m-input--square" name="searchTitle" placeholder="Enter Movie Name Here">
                              {{/if}}
                          </div>
                          <div class="m-portlet__foot m-portlet__foot--fit">
                              <div class="m-form__actions">
                                  <button class="btn btn-primary">Search</button>
                              </div>
                          </div>
                      </form>
                  </h1>
              </div>
              </div>
            </div>
            </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Title: <span id="TitleValue"></span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Year: <span id="YearValue"></span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Genre: <span id="GenreValue"></span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Director: <span id="GenreValue"></span>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <a href="/registeradmin" class="btn btn-danger">AdminAccount</a>
        </div>
        <!--End::Main Portlet-->
    </div>
</div>
{{> footer}}