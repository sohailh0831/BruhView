{{> header}}
<script src="../../../assets/demo/default/custom/crud/metronic-datatable/base/data-json-budgets.js" type="text/javascript"></script>

<div class="m-grid__item m-grid__item--fluid m-wrapper">
    <div class="m-content">
        {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button>
                <strong>Oh snap!</strong> {{error}}
            </div>
        {{/if}}
        {{#if success}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                </button>
                <strong>Success!</strong> {{success}}
            </div>
        {{/if}}

        <div class="row">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Search For Movies
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <h1>
                            <form class="m-form m-form--fit m-form--label-align-right" method="post" action="/dashboard">
                                <div class="form-group m-form__group">
                                    <label>Movie Name</label>
                                    {{#if movie}}
                                        <input id="SearchBar" type="text" class="form-control m-input m-input--square" name="searchTitle" value="{{movie}}">
                                    {{else}}
                                        <input id="SearchBar" type="text" class="form-control m-input m-input--square" name="searchTitle" placeholder="Enter Movie Name Here">
                                    {{/if}}
                                </div>
                                <div class="m-portlet__foot m-portlet__foot--fit">
                                    <div class="m-form__actions">
                                        <button class="btn btn-primary">Search</button>
                                    </div>
                                </div>
                            </form>
                        </h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    Random Movies
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <a href="/movie/{{id1}}">
                                        {{title1}}
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <a href="/movie/{{id1}}">
                            <img src="{{pic1}}" height="300" width="200">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <a href="/movie/{{id2}}">
                                        {{title2}}
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <a href="/movie/{{id2}}">
                            <img src="{{pic2}}" height="300" width="200">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <a href="/movie/{{id3}}">
                                        {{title3}}
                                    </a>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <a href="/movie/{{id3}}">
                            <img src="{{pic3}}" height="300" width="200">
                        </a>
                        <br>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
